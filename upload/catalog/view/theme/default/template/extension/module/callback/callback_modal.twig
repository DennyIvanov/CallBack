<div class="modal fade" id="callback-modal" tabindex="-1" role="dialog" aria-labelledby="callback-modal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="{{ button_close }}"><span
						aria-hidden="true">&times;</span></button>
				<h4 class="modal-title modal-title"><i class="fa fa-question fa-2x" aria-hidden="true"></i>
					{{ modal_title }}
				</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal" id="callback-form" action="{{ url_store }}" method="post">
					<input type="hidden" name="url" id="callback-url">
					<div class="form-group">
						<label for="callback-name" class="col-sm-2 control-label">{{ label_name }}</label>
						<div class="col-sm-10">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-user-o fa-fw" aria-hidden="true"></i></span>
								<input type="text" name="name" class="form-control" id="callback-name"
									placeholder="{{ label_name }}">
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="callback-phone" class="col-sm-2 control-label">{{ label_phone }}</label>
						<div class="col-sm-10">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-mobile fa-fw" aria-hidden="true"></i></span>
								<input type="tel" name="phone" class="form-control" id="callback-phone"
									placeholder="{{ label_phone }}">
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="callback-email" class="col-sm-2 control-label">{{ label_email }}</label>
						<div class="col-sm-10">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-envelope fa-fw" aria-hidden="true"></i></span>
								<input type="email" name="email" class="form-control" id="callback-email"
									placeholder="{{ label_email }}">
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="callback-message" class="col-sm-2 control-label">{{ label_message }}</label>
						<div class="col-sm-10">
							<textarea name="message" class="form-control" id="callback-message"></textarea>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"
						aria-hidden="true"></i> {{ button_close }}</button>
				<button type="submit" class="btn btn-primary" id="callback-store"><i class="fa fa-check"
						aria-hidden="true"></i> {{ button_send }}</button>
			</div>
		</div>
	</div>
</div>